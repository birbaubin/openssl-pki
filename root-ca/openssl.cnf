####################################################################
# Request settings
####################################################################

[ req ]
default_bits        = 4096
default_md          = sha256
default_keyfile     = private/root.key.pem
prompt              = no
distinguished_name  = req_distinguished_name
x509_extensions     = v3_ca   # The extensions to add when creating a self-signed cert

[ req_distinguished_name ]
C                   = CA
ST                  = Quebec
L                   = Montreal
O                   = MyCompany Security
OU                  = Root Certification Authority
CN                  = MyCompany Root CA
emailAddress        = security@mycompany.com

####################################################################
# CA settings
####################################################################

[ ca ]
default_ca = CA_default

[ CA_default ]
dir               = /etc/pki
certs             = $dir/certs
crl_dir           = $dir/crl
new_certs_dir     = $dir/newcerts
database          = $dir/index.txt
serial            = $dir/serial
private_key       = $dir/private/root.key.pem
certificate       = $dir/certs/root.cert.pem
crlnumber         = $dir/crlnumber
crl               = $dir/crl/root.crl.pem
crl_extensions    = crl_ext
default_crl_days  = 30
default_md        = sha256
name_opt          = ca_default
cert_opt          = ca_default
default_days      = 375
preserve          = no
policy            = policy_strict

[ policy_strict ]
countryName             = match
stateOrProvinceName     = match
organizationName        = match
organizationalUnitName  = optional
commonName              = supplied
emailAddress            = optional

# Root CA certificate extension
[ v3_ca ]
subjectKeyIdentifier=hash
authorityKeyIdentifier=keyid:always,issuer
basicConstraints = critical,CA:true
keyUsage = critical, digitalSignature, cRLSign, keyCertSign

# CRL extension
[ crl_ext ]
authorityKeyIdentifier=keyid:always
